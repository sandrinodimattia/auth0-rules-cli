#!/usr/bin/env node

console.log('\n  Auth0 Rules CLI\n');

const program = require('commander');
program
  .version('1.0.0')
  .command('list', 'list the current rules you have enabled')
  .command('delete', 'delete a rule')
  .command('deploy', 'deploy a rule')
  .parse(process.argv);

